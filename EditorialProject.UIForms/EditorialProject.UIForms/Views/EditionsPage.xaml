<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EditorialProject.UIForms.Views.EditionsPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Editions">
    <ContentPage.Content>
        <StackLayout BindingContext="{Binding Editions}"
                     Padding="10">
            <ListView ItemsSource="{Binding Editions}"
                      HasUnevenRows="True">

            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>