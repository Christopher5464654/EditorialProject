<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EditorialProject.UIForms.Views.HomePage"
             Title="Home">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to your editorial"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="Title"
                   Padding="20"
                   HorizontalOptions="CenterAndExpand" />
            <Image Source="Libreria"
                           HeightRequest="100">
            </Image>
            <Label Text="In this app you can upload all the drafts of your writing that you want so that others know about it. In this app it is strictly forbidden to upload copyrighted works without the prior authorization of the writer. Have fun writing!. "
                   HorizontalTextAlignment="Center"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="Body"
                   Padding="20">

            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>